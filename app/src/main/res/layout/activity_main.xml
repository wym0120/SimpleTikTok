<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

    <TextView
            android:id="@+id/city"
            android:text="@string/City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/recommendation"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="60dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

    <TextView
            android:id="@+id/recommendation"
            android:text="@string/Recommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            app:layout_constraintTop_toTopOf="@id/city"
            app:layout_constraintBottom_toBottomOf="@id/city"
            app:layout_constraintLeft_toRightOf="@id/city"
            app:layout_constraintRight_toLeftOf="@id/record"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

    <TextView
            android:id="@+id/record"
            android:text="@string/Record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            app:layout_constraintTop_toTopOf="@id/city"
            app:layout_constraintBottom_toBottomOf="@id/city"
            app:layout_constraintRight_toLeftOf="@id/upload"
            app:layout_constraintLeft_toRightOf="@id/recommendation"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

    <TextView
            android:id="@+id/upload"
            android:text="@string/Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            app:layout_constraintTop_toTopOf="@id/city"
            app:layout_constraintBottom_toBottomOf="@id/city"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/record"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

</androidx.constraintlayout.widget.ConstraintLayout>