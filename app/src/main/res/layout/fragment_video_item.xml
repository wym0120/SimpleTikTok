<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VideoItemFragment">

    <VideoView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/videoView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/seek_bar"
            android:orientation="horizontal" />

    <ImageButton
            android:layout_width="35dp"
            android:layout_height="28dp"
            android:id="@+id/start_pause_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/start_pause_img_btn_content_desc"
            android:src="@mipmap/ic_launcher_round" />

    <SeekBar
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:id="@+id/seek_bar"
            app:layout_constraintLeft_toRightOf="@id/start_pause_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/start_pause_btn"
            app:layout_constraintBottom_toBottomOf="@id/start_pause_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>